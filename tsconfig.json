{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6", // Compatible with Vercel's Node.js runtime
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "api",
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}